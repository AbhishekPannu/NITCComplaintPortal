<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF2FC"
    tools:context=".myProfile">


    <Button
        android:id="@+id/button15"
        android:layout_width="356dp"
        android:layout_height="63dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#001C55"
        android:clickable="false"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:fontFamily="sans-serif"
        android:hint="Nickname"
        android:textAlignment="textStart"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button17"
        app:layout_constraintVertical_bias="0.375" />

    <Button
        android:id="@+id/button20"
        android:layout_width="160dp"
        android:layout_height="66dp"
        android:backgroundTint="#001C55"
        android:text="Reset Password"
        android:textColorHint="#FFFFFF"
        app:cornerRadius="20mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toEndOf="@+id/button18"
        app:layout_constraintTop_toBottomOf="@+id/button17"
        app:layout_constraintVertical_bias="0.668" />

    <Button
        android:id="@+id/button18"
        android:layout_width="160dp"
        android:layout_height="66dp"
        android:backgroundTint="#001C55"
        android:text="Edit Profile"
        app:cornerRadius="20mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button17"
        app:layout_constraintVertical_bias="0.668" />

    <Button
        android:id="@+id/button16"
        android:layout_width="356dp"
        android:layout_height="63dp"
        android:backgroundTint="#001C55"
        android:clickable="false"
        android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
        android:fontFamily="sans-serif"
        android:hint="abc@nitc.ac.in"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button17"
        android:layout_width="356dp"
        android:layout_height="63dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#001C55"
        android:clickable="false"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:fontFamily="sans-serif"
        android:hint="9999999999"
        android:textAlignment="textStart"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button16"
        app:layout_constraintVertical_bias="0.198" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="155dp"
        android:layout_height="162dp"
        android:src="@drawable/ic_baseline_person1_24"
        app:civ_border_color="#001C55"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="#001C55"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUser2"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/textViewUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:text="MY PROFILE"
        android:textAlignment="center"
        android:textColor="#001C55"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="356dp"
        android:layout_height="63dp"
        android:backgroundTint="#001C55"
        android:hint="Name"
        android:textAlignment="center"
        android:textColor="#001C55"
        android:textColorHint="#001C55"
        android:textSize="27sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:hint="N"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="52sp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="36dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewUser2"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017"
        app:srcCompat="@drawable/ic_baseline_person1_24" />

</androidx.constraintlayout.widget.ConstraintLayout>